

<%= form_for @product do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %></br>

  <%= form.label :description %>
  <%= form.text_area :description, placeholder: "Put your description here" %></br>

  <%= form.label :price, "Price (like 2.99)" %>
  <%= form.number_field :price %>

  <%= form.submit %>
<% end %>


