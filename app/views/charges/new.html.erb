<%= form_tag(charges_path, method: :post) do  %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>
<%= submit_tag 'Pay the order' %>
  
<% end %>